<% @title = 'Log in'
   @heading = 'Log In' %>
<div class="container">
  <div class="form col-md-4">
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="form-group">
        <%= f.label :email, 'E-mail' %>
        <%= f.email_field :email, placeholder: 'Введите e-mail', class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password, 'Пароль' %>
        <%= f.password_field :password, placeholder: 'Введите пароль', class: 'form-control' %>
      </div>
      <a href="#">Забыли пароль?</a><br>
      <%= f.submit 'Войти', class: 'btn btn-default' %>
    <% end %>
    <br>
    или <%= link_to 'зарегистрироваться', 'signup' %>
  </div>
</div>