<% @title = 'Новый тендер'
   @heading = 'Новый тендер' %>
<div class="container">
  <div class="form">
    <%= form_for(@tender) do |f| %>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :title, 'Заголовок' %>
            <%= f.text_field :title, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :content, 'Описание' %>
            <%= f.text_area :content, class: 'form-control', rows: "15" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :amount, 'Сумма закупки' %>
            <%= f.number_field :amount, class: 'form-control' %>
            <%= f.select(:currency, {}, {}, {class: 'form-control'}) do %>
                <%= content_tag(:option, 'UAH', value: 'UAH') %>
                <%= content_tag(:option, 'USD', value: 'USD') %>
            <% end %>
          </div>
          <div class="form-group">
            <%= f.label :address, 'Адрес' %>
            <%= f.text_field :address, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :area, 'Регион' %>
            <%= f.select(:area, {}, {}, {class: 'form-control'}) do %>
                <% @areas.each do |a| -%>
                    <%= content_tag(:option, a.name_ru, value: a.id) %>
                <% end %>
            <% end %>
          </div>
          <div class="form-group">
            <%= f.label :category, 'Категория' %>
            <%= f.select(:category, {}, {}, {class: 'form-control'}) do %>
                <% @categories.each do |a| -%>
                    <%= content_tag(:option, a.name_ru, value: a.id) %>
                <% end %>
            <% end %>
          </div>
          <div class="form-group">
            <%= f.label :deadline, 'Дата подачи предложений' %>
            <%= f.date_select :deadline, :start_year => 2016, class: 'form-control' %>
          </div>
        </div>

        <div class="col-md-12">
          <div class="action">
            <%= f.submit 'Создать', class: 'btn btn-default' %>
          </div>
        </div>
    <% end %>
  </div>
</div>