<% @title = 'New tender'
   @heading = 'New tender' %>
<div class="container">
  <div class="form col-md-4">
    <%= form_for(@tender) do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_area :content, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :address %>
          <%= f.text_field :address, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :area %>
          <%= f.select(:area,{}, {}, {class: 'form-control'}) do %>
            <% @areas.each do |a| -%>
              <%= content_tag(:option, a.name_en, value: a.id) %>
            <% end %>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.label :category %>
          <%= f.select(:category,{}, {}, {class: 'form-control'}) do %>
              <% @categories.each do |a| -%>
                <%= content_tag(:option, a.name_en, value: a.id) %>
              <% end %>
          <% end %>
        </div>
        <div class="action">
          <%= f.submit "Create", class: 'btn btn-default' %>
        </div>
    <% end %>
  </div>
</div>