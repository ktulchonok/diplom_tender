<% @title = 'Editing'
   @heading = 'Editing' %>
<div class="container">
    <%= form_for(@post) do |f| %>
        <div class="form-group">
          <%= f.label :title_en %>
          <%= f.text_field :title_en, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :title_ru, 'Заголовок' %>
          <%= f.text_field :title_ru, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :text_en %>
          <%= f.text_area :text_en, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :text_ru %>
          <%= f.text_area :text_ru, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= image_tag(@post.preview, size: '170x130') %>
          <%= file_field(:post, :preview, accept: 'image/png,image/gif,image/jpeg') %>
        </div>
        <div class="action">
          <%= f.submit "Update", class: 'btn btn-default' %>
        </div>
    <% end %>
</div>