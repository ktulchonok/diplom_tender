<% @title = 'Registration'
   @heading = 'Sign Up' %>
<div class="container">
  <div class="reg form col-md-4">
    <%= form_for(@user) do |f| %>
        <div class="form-group">
          <%= f.label :first_name, 'Имя*' %>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :last_name, 'Фамилия*' %>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email, 'E-mail*' %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password, 'Пароль*' %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password_ver, 'Подтвердите пароль*' %>
          <%= f.password_field :password_ver, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :number, 'Номер телефона' %>
          <%= f.text_field :number, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :address, 'Адрес' %>
          <%= f.text_field :address, class: 'form-control' %>
        </div>
        <div class="action">
          <%= f.submit 'Зарегистрироваться', class: 'btn btn-default' %>
        </div>
    <% end %>
  </div>
</div>